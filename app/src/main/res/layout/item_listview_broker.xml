<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="10dp"
    android:background="@drawable/item_selector"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/listview_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_baseline_dns_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listview_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/item_text_selector"
            android:textSize="20sp"
            android:text="服务器名" />

        <TextView
            android:id="@+id/listview_item_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@drawable/item_text_selector"
            android:text="Host/IP" />

    </LinearLayout>

    <RadioButton
        android:id="@+id/listview_item_radio"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="false"
        android:checked="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</LinearLayout>